<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.huang.cookhelper.Main6Activity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/MainLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/headline"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <Button
                android:text="back"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:id="@+id/button"
                android:elevation="0dp"
                style="@style/Widget.AppCompat.Button" />

            <TextView
                android:text="Edit Recipe:"
                android:layout_width="174dp"
                android:layout_height="38dp"
                android:id="@+id/title"
                android:gravity="left|center"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textStyle="normal|bold"
                android:textSize="24sp"
                android:layout_weight="0.52"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="34dp">

            <TextView
                android:text="Lasagna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:layout_weight="0.03"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/subhead1">

            <TextView
                android:text="Choose Ingredients:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/subtitle1"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textStyle="normal|bold"

                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <CheckBox
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:id="@+id/check1"
                tools:text="Ingredient1"
                android:fontFamily="serif"
                android:textSize="14sp"
                android:checked="true"
                android:layout_weight="0.52" />

            <CheckBox
                android:text="Ingredient3"
                android:layout_width="169dp"
                android:layout_height="wrap_content"
                android:id="@+id/check3"
                android:fontFamily="serif"
                android:textSize="14sp"
                android:typeface="serif"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:text="Ingredient2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/check2"
                android:fontFamily="serif"
                android:textSize="14sp"
                android:layout_weight="0.06" />

            <CheckBox
                android:text="Ingredient 4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox"
                android:layout_weight="0.09"
                android:fontFamily="serif"
                android:typeface="serif" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:id="@+id/subhead2"
            android:weightSum="1"
            android:layout_height="wrap_content">

            <TextView
                android:text="Enter Directions and Other Information:"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:id="@+id/subtitle2"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textStyle="normal|bold"
                android:textSize="18sp"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:id="@+id/pretime">

            <TextView
                android:text="Preparation Time:"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/pre"
                android:layout_weight="0.77"
                android:typeface="normal"
                android:textAppearance="@android:style/TextAppearance"
                android:fontFamily="serif"
                android:textSize="14sp" />

            <EditText
                android:layout_height="25dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText6"
                android:hint="  Enter Prep time"
                android:background="@drawable/border_style"
                android:textSize="14sp"
                android:layout_weight="0.93"
                android:layout_width="200dp"
                android:text="40 Min" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="31dp">

            <TextView
                android:text="Cook Time:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/co"
                android:layout_weight="1"
                android:textAppearance="@android:style/TextAppearance"
                android:textSize="14sp"

                android:typeface="serif" />

            <EditText
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/cooktime"
                android:hint=" Enter Cooking time"
                android:background="@drawable/border_style"
                android:textSize="14sp"
                android:layout_height="25dp"
                android:layout_width="200dp"
                android:layout_weight="0.24"
                android:text="45 Min" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="31dp">

            <TextView
                android:text="Calories:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ca"
                android:layout_weight="1"
                android:textAppearance="@android:style/TextAppearance"
                android:fontFamily="serif"
                android:textSize="14sp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText8"
                android:layout_weight="0.59"
                android:textSize="14sp"
                android:background="@drawable/border_style"

                android:hint=" Enter Calories"
                android:text="300 Calories" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <EditText
                android:layout_width="match_parent"
                android:inputType="text|textMultiLine"
                android:ems="10"
                android:id="@+id/enter1"
                android:hint=" Step1 &#10; Step 2 &#10; Step 3..."
                style="@style/Widget.AppCompat.EditText"
                android:fontFamily="serif"
                android:textSize="14sp"
                android:layout_height="match_parent"
                android:background="@drawable/border_style"
                android:singleLine="false"
                android:gravity="left" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/subhead3">

            <TextView
                android:text="Select Category and Type:"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/subtitle3"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textStyle="normal|bold"
                android:textSize="18sp"
                android:gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/category"
                android:entries="@array/category_arrays"
                android:layout_weight="1" />


            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/type"
                android:entries="@array/type_arrays"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="85dp">

            <Button
                android:text="Cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cancel"
                android:layout_weight="1.27" />

            <Button
                android:text="Save Edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/add"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
